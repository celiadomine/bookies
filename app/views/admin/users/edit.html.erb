<div class="container mx-auto p-8 max-w-lg bg-white shadow-xl rounded-2xl border border-pink-100">
  
  <h1 class="text-3xl font-bold mb-8 text-center">
    Edit User: <%= @user.username %>
  </h1>

  <%= form_with(model: @user, url: admin_user_path(@user), method: :patch, local: true, class: "space-y-6") do |form| %>
    <% if @user.errors.any? %>
      <div class="p-4 bg-red-50 border border-red-300 text-red-600 rounded-lg shadow-sm">
        <h2 class="font-bold mb-2">
          <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
        </h2>
        <ul class="list-disc list-inside space-y-1">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="flex flex-col">
      <%= form.label :username, class: "text-base font-semibold mb-2" %>
      <%= form.text_field :username, 
          class: "border p-3 rounded-lg shadow-sm focus:ring-pink-500 focus:border-pink-500 text-gray-800 transition-all" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :email_address, class: "text-base font-semibold mb-2" %>
      <%= form.email_field :email_address, 
          class: "border p-3 rounded-lg shadow-sm focus:ring-pink-500 focus:border-pink-500 text-gray-800 transition-all" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :role, class: "text-base font-semibold mb-2" %>
      <%= form.select :role, User.roles.keys.map { |role| [role.capitalize, role] }, {}, 
          class: "border p-3 rounded-lg shadow-sm focus:ring-pink-500 focus:border-pink-500 text-gray-800 transition-all" %>
    </div>

    <div class="flex items-center pt-4">
      <%= form.submit "Update User", 
          class: "py-3 px-6 rounded-full shadow-lg text-lg font-bold text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-4 focus:ring-offset-2 focus:ring-pink-400 cursor-pointer transition-all duration-200" %>

      <%= link_to "Cancel", admin_users_path, 
          class: "ml-4 text-pink-600 hover:text-pink-800 font-medium underline transition-colors" %>
    </div>
    
  <% end %>
</div>
<div class="container mx-auto p-8">
  <h1 class="text-3xl font-bold mb-8 text-gray-800">Edit User: <%= @user.username %></h1>

  <%= form_with(model: @user, url: admin_user_path(@user), method: :patch, local: true, class: "space-y-6") do |form| %>
    <% if @user.errors.any? %>
      <div class="p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
        <h2 class="font-bold mb-2">
          <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
        </h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="flex flex-col">
      <%= form.label :username, class: "text-gray-700 font-medium mb-1" %>
      <%= form.text_field :username, class: "border border-gray-300 p-2 rounded-md" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :email_address, class: "text-gray-700 font-medium mb-1" %>
      <%= form.email_field :email_address, class: "border border-gray-300 p-2 rounded-md" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :role, class: "text-gray-700 font-medium mb-1" %>
      <%= form.select :role, User.roles.keys.map { |role| [role.capitalize, role] }, {}, class: "border border-gray-300 p-2 rounded-md" %>
    </div>

    <%= form.submit "Update User", class: "bg-pink-500 hover:bg-pink-600 text-white font-bold py-2 px-4 rounded-md cursor-pointer transition-colors" %>
    <%= link_to "Cancel", admin_users_path, class: "ml-4 text-gray-500 hover:text-gray-700 transition-colors" %>
  <% end %>
</div>
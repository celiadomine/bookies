<div class="container mx-auto p-8">
  <h1 class="text-4xl font-bold mb-8 text-gray-800">Benutzerverwaltung</h1>
  <table class="w-full border-collapse border border-gray-300">
    <thead class="bg-gray-200">
      <tr>
        <th class="p-4 border border-gray-300 text-left">Username</th>
        <th class="p-4 border border-gray-300 text-left">E-Mail</th>
        <th class="p-4 border border-gray-300 text-left">Rolle</th>
        <th class="p-4 border border-gray-300 text-left">Aktionen</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="hover:bg-gray-100">
          <td class="p-4 border border-gray-300"><%= user.username %></td>
          <td class="p-4 border border-gray-300"><%= user.email_address %></td>
          <td class="p-4 border border-gray-300"><%= user.role %></td>
          <td class="p-4 border border-gray-300">
            <%= link_to 'Bearbeiten', edit_admin_user_path(user), class: "text-blue-500 hover:text-blue-700 font-medium" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
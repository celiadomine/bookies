<div class="container mx-auto p-8">
  <h1 class="text-3xl font-bold mb-6">User Management</h1>

  <table class="w-full border-collapse border border-pink-300  overflow-hidden shadow-lg">

    <thead class="bg-pink-600 text-white">
      <tr>
        <th class="p-4 border border-pink-700 text-left font-extrabold tracking-wider">Username</th>
        <th class="p-4 border border-pink-700 text-left font-extrabold tracking-wider">E-Mail</th>
        <th class="p-4 border border-pink-700 text-left font-extrabold tracking-wider">Role</th>
        <th class="p-4 border border-pink-700 text-left font-extrabold tracking-wider">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr class="bg-white hover:bg-pink-50 transition-colors">
          <td class="p-4 border border-pink-200 text-gray-800"><%= user.username %></td>
          <td class="p-4 border border-pink-200 text-gray-800"><%= user.email_address %></td>
          <td class="p-4 border border-pink-200 text-gray-800"><%= user.role %></td>
          <td class="p-4 border border-pink-200">
            <%= link_to 'Edit', edit_admin_user_path(user), 
                class: "text-pink-600 hover:text-pink-800 font-bold underline transition-colors" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
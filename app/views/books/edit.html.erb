<div class="container mx-auto p-8">
  <h1 class="text-4xl font-bold mb-6">Edit Book Details</h1>
  
  <%= form_with(model: @book) do |f| %>
    <% if @book.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= f.label :authors, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :authors, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    
    <div class="mb-4">
      <%= f.label :label, "Change Label", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.select :label, Book.labels.keys.map { |l| [l.capitalize, l] }, { prompt: "Select a label" }, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <%= f.submit "Update Book", class: "bg-pink-500 hover:bg-pink-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  <% end %>
</div>
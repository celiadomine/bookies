<div class="container mx-auto p-8">
  <h1 class="text-3xl font-semibold"><%= @book.title %></h1>
  <p class="text-gray-600 mb-4">By: <%= @book.authors %></p>

  <div class="prose max-w-none text-gray-700 mb-6">
    <h2 class="text-2xl font-semibold mb-2">Description</h2>
    <p><%= strip_tags(@book.description) %></p>
  </div>

  <div class="border-t pt-4 mt-6">
    <div class="mt-4 flex space-x-4">
      <%= link_to "Write a Review", new_book_review_path(@book), class: "bg-pink-500 hover:bg-pink-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Create a Post", new_book_post_path(@book), class: "bg-pink-500 hover:bg-pink-700 text-white font-bold py-2 px-4 rounded" %>
    </div>

    <h2 class="mt-8 text-2xl font-semibold">Update Label</h2>
    <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
      <div>
        <%= f.label :label, "Change Label", class: "block text-gray-700 font-bold mb-2" %>
        <%= f.select :label, Book.labels.keys.map { |l| [l.capitalize, l] }, { prompt: "Select a label" }, class: "w-full p-2 border rounded" %>
      </div>
      <div class="mt-4">
        <%= f.submit "Update Label", class: "bg-pink-500 text-white px-4 py-2 rounded" %>
      </div>
    <% end %>
  </div>
</div>
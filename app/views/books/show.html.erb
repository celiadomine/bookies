<div class="container mx-auto p-8">
  <h1 class="text-3xl font-semibold"><%= @book.title %></h1>
  <p class="text-gray-600 mb-4">By <%= @book.authors %></p>

  <div class="prose max-w-none text-gray-700 mb-6">
    <h2 class="text-2xl font-semibold mb-2">Description</h2>
    <p><%= strip_tags(@book.description) %></p>
  </div>

  <div class="border-t pt-6 mt-6 border-pink-700">
    <div class="mt-4 flex space-x-4 mb-8">
    
      <%= link_to "Write a Review", new_book_review_path(@book), 
          class: "bg-pink-600 hover:bg-pink-700 text-white font-bold py-3 px-6 rounded-full shadow-lg transition-colors text-base" %>

      <%= link_to "Create a Post", new_book_post_path(@book), 
          class: "bg-pink-600 hover:bg-pink-700 text-white font-bold py-3 px-6 rounded-full shadow-lg transition-colors text-base" %>
    </div>

    <h2 class="mt-8 text-2xl font-bold mb-4 text-pink-700">Update Label</h2>
    
    <%= form_with model: @book, url: book_path(@book), method: :patch, class: "flex items-end space-x-3" do |f| %>

      <div class="flex-grow">
        <%= f.label :label, "Change Label", class: "block text-base font-semibold text-pink-700 mb-2" %>
        <%= f.select :label, Book.labels.keys.map { |l| [l.capitalize, l] }, { prompt: "Select a label" }, 
            class: "w-full p-3 border border-pink-300 rounded-lg shadow-sm focus:ring-pink-500 focus:border-pink-500 text-gray-800 transition-all" %>
      </div>

      <div class="flex-shrink-0">
        <%= f.submit "Update Label", 
            class: "py-3 px-6 rounded-full shadow-md text-base font-bold text-white bg-pink-700 hover:bg-pink-800 cursor-pointer transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
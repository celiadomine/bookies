<div class="container mx-auto p-8">
  <h1 class="text-3xl font-bold mb-6">Add a new book</h1>
  
  <%= form_with(model: @book, url: books_path) do |f| %>
    <% if @book.errors.any? %>
      <div class="p-4 mb-4 bg-red-100 border border-red-400 text-red-700 rounded-md">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="mb-4">
      <%= f.label :title, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_field :title, class: "w-full p-2 border border-gray-300 rounded-md", readonly: true %>
    </div>
  
    <div class="mb-4">
      <%= f.label :authors, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_field :authors, class: "w-full p-2 border border-gray-300 rounded-md", readonly: true %>
    </div>

    <div class="mb-4">
      <%= f.label :description, "Description", class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_area :description, class: "w-full p-2 border border-gray-300 rounded-md", readonly: true %>
    </div>

    <div class="mb-4">
      <%= f.label :published_date, "Published Date", class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_field :published_date, class: "w-full p-2 border border-gray-300 rounded-md", readonly: true %>
    </div>

    <div class="mb-6">
      <%= f.label :label, "Add a Label", class: "block text-gray-700 font-bold mb-2" %>
      <%= f.select :label, Book.labels.keys.map { |l| [l.capitalize, l] }, { prompt: "Select a label" }, class: "w-full p-2 border border-gray-300 rounded-md" %>
    </div>
  
    <%= f.hidden_field :google_books_id, value: @book.google_books_id %>
  
    <%= f.submit "Save Book", class: "bg-pink-500 hover:bg-pink-700 text-white font-bold py-2 px-4 rounded-md cursor-pointer" %>
  <% end %>
</div>
<div class="container mx-auto p-8 max-w-lg bg-white shadow-xl rounded-2xl border border-pink-100">
  
  <%# Heading: Themed Pink and centered %>
  <h1 class="text-3xl font-bold mb-8 text-pink-700 text-center">Add a New Book</h1>
  
  <%= form_with(model: @book, url: books_path, class: "space-y-6") do |f| %>
    
    <%# Error Messages: Styled with a soft red/pink alert %>
    <% if @book.errors.any? %>
      <div class="p-4 mb-4 bg-red-50 border border-red-300 text-red-600 rounded-lg shadow-sm">
        <h2 class="font-bold mb-2">
          <%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:
        </h2>
        <ul class="list-disc list-inside space-y-1">
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <%# Read-Only Fields Styling: Clean, background emphasizes readonly status %>
    
    <div class="mb-4">
      <%= f.label :title, class: "block text-base font-semibold text-pink-700 mb-2" %>
      <%= f.text_field :title, class: "w-full p-3 border border-pink-200 rounded-lg bg-pink-50 text-gray-700 font-medium", readonly: true %>
    </div>
  
    <div class="mb-4">
      <%= f.label :authors, class: "block text-base font-semibold text-pink-700 mb-2" %>
      <%= f.text_field :authors, class: "w-full p-3 border border-pink-200 rounded-lg bg-pink-50 text-gray-700 font-medium", readonly: true %>
    </div>

    <div class="mb-4">
      <%= f.label :description, "Description", class: "block text-base font-semibold text-pink-700 mb-2" %>
      <%= f.text_area :description, class: "w-full p-3 border border-pink-200 rounded-lg bg-pink-50 text-gray-700 font-medium h-32", readonly: true %>
    </div>

    <div class="mb-4">
      <%= f.label :published_date, "Published Date", class: "block text-base font-semibold text-pink-700 mb-2" %>
      <%= f.text_field :published_date, class: "w-full p-3 border border-pink-200 rounded-lg bg-pink-50 text-gray-700 font-medium", readonly: true %>
    </div>

    <%# Select Field: Styled for editability with pink border and focus %>
    <div class="mb-6">
      <%= f.label :label, "Add a Label", class: "block text-base font-semibold text-pink-700 mb-2" %>
      <%= f.select :label, Book.labels.keys.map { |l| [l.capitalize, l] }, { prompt: "Select a label" }, 
          class: "w-full p-3 border border-pink-300 rounded-lg shadow-sm focus:ring-pink-500 focus:border-pink-500 text-gray-800 transition-all" %>
    </div>
  
    <%= f.hidden_field :google_books_id, value: @book.google_books_id %>
  
    <%# Submit Button: Hot pink, fully rounded, primary action style %>
    <div class="pt-4">
      <%= f.submit "Save Book", 
          class: "w-full py-3 px-6 rounded-full shadow-lg text-lg font-bold text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-4 focus:ring-offset-2 focus:ring-pink-400 cursor-pointer transition-all duration-200" %>
    </div>
    
  <% end %>
</div>
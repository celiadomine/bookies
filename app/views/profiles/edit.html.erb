<h1 class="text-3xl font-semibold">Edit Your Profile</h1>

<%= form_with model: @user, url: profile_path, method: :patch, class: "space-y-4" do |f| %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username, class: "w-full p-2 border rounded", required: true %>
  </div>

  <div>
    <%= f.label :email_address %>
   <%= f.email_field :unconfirmed_email, value: @user.email_address, class: "w-full p-2 border rounded", required: true %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password, class: "w-full p-2 border rounded" %>
    <small>Leave blank if you don't want to change your password.</small>
  </div>

  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "w-full p-2 border rounded" %>
  </div>

  <div>
    <%= f.submit "Update Profile", class: "bg-pink-600 hover:bg-pink-700 text-white font-bold py-3 px-6 rounded-full shadow-md transition-colors" %>
  </div>
<% end %>

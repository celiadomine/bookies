<div class="container mx-auto p-8 max-w-lg">
  <h1 class="text-3xl font-bold mb-6">Create a new review</h1>
  
  <%= form_with(model: @review, url: book_reviews_path(@book), class: "space-y-6") do |f| %>
    
    <div class="form-group">
      <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :title, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-pink-500 focus:border-pink-500" %>
    </div>
    
    <div class="form-group">
      <%= f.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :body, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-pink-500 focus:border-pink-500 h-32" %>
    </div>
    
    <div class="form-group">
      <%= f.label :rating, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :rating, min: 1, max: 5, class: "w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-pink-500 focus:border-pink-500" %>
    </div>
    
    <div class="flex justify-center">
      <%= f.submit "Submit Review", class: "w-full py-3 px-6 border border-transparent rounded-md shadow-sm text-lg font-medium text-white bg-pink-500 hover:bg-pink-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500 cursor-pointer transition duration-150 ease-in-out" %>
    </div>
    
  <% end %>
</div>